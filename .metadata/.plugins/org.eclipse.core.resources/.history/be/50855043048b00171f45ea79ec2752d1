	{
		n=x;
	}
	String decid()
	{
		if(n>0)
	
	{
	return "positive";
	}
		if(n<0)
	{
		return "negative";
}
	else
	{
		return "zero";
	}
	}

	void displ()
	{
		String s= decid();
	}
	

	public static void main (String[] arg)
	{

if (arg.length!=1)
{
	System.out.println("please enter value");
}
else
{
	//int x = Integer.parseInt(arg[]);
